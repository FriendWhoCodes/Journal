// Shared Prisma schema for all Man of Wisdom applications
// This is the single source of truth for database models
// Both goal-setter and time-views apps reference this schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// SHARED AUTH TABLES
// Used by all MoW applications for authentication
// ============================================

model AuthUser {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime? @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  sessions                 AuthSession[]
  magicLinks               AuthMagicLink[]
  products                 UserProduct[]
  goalSetterUser           GoalSetterUser?
  timeViewsEntries         TimeViewsEntry[]
  priorityModeSubmissions  PriorityModeSubmission[]

  @@map("auth_users")
}

// Tracks which products a user has access to
model UserProduct {
  id         String    @id @default(cuid())
  userId     String    @map("user_id")
  product    String    // goal_setter, time_views, journal, wallpaper_pack_1, etc.
  accessType String    @map("access_type") // free, purchased, trial, subscription
  grantedAt  DateTime  @default(now()) @map("granted_at")
  expiresAt  DateTime? @map("expires_at") // null for lifetime/free access

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, product])
  @@index([userId])
  @@index([product])
  @@map("user_products")
}

model AuthSession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@map("auth_sessions")
}

model AuthMagicLink {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  token     String    @unique
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([expiresAt])
  @@map("auth_magic_links")
}

// ============================================
// GOAL SETTER TABLES
// ============================================

model GoalSetterUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(255)
  name      String   @db.VarChar(255)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  // Link to shared auth
  authUserId String?   @unique @map("auth_user_id")
  authUser   AuthUser? @relation(fields: [authUserId], references: [id], onDelete: SetNull)

  submissions GoalSetterSubmission[]

  @@index([email])
  @@map("goal_setter_users")
}

model GoalSetterSubmission {
  id     Int    @id @default(autoincrement())
  userId Int    @map("user_id")
  mode   String @db.VarChar(10) // 'quick' | 'deep'

  // Top 3 Goals (both modes)
  goal1 String? @map("goal_1") @db.Text
  goal2 String? @map("goal_2") @db.Text
  goal3 String? @map("goal_3") @db.Text

  // Habits (arrays as JSONB)
  habitsToBuild Json? @map("habits_to_build") @db.JsonB
  habitsToBreak Json? @map("habits_to_break") @db.JsonB

  // Theme
  mainTheme String? @map("main_theme") @db.Text

  // Deep Mode Category Data (stored as JSONB)
  deepModeData Json? @map("deep_mode_data") @db.JsonB

  // Fun Section
  placesToVisit     String? @map("places_to_visit") @db.Text
  booksToRead       String? @map("books_to_read") @db.Text
  moviesToWatch     String? @map("movies_to_watch") @db.Text
  experiencesToHave String? @map("experiences_to_have") @db.Text

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  user GoalSetterUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("goal_setter_submissions")
}

// ============================================
// PRIORITY MODE TABLES
// ============================================

model PriorityModeSubmission {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")

  // Priorities with nested goals and milestones (stored as JSONB)
  // Structure: Array of Priority objects, each with goals array
  priorities Json @db.JsonB

  // Identity transformation data
  identity Json @db.JsonB

  // Year this blueprint is for
  year Int @default(2026)

  // Wisdom mode flag
  wisdomMode Boolean @default(false) @map("wisdom_mode")
  wisdomType String? @map("wisdom_type") // 'ai' or 'manual'

  // Status
  finalizedAt DateTime? @map("finalized_at")
  editCount   Int       @default(0) @map("edit_count")

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Link to auth user (direct link, not through GoalSetterUser)
  user AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Wisdom feedback relation
  wisdomFeedback WisdomFeedback?

  // Normalized tracking tables (populated on finalization)
  goals  PriorityGoal[]
  habits PriorityHabit[]

  @@unique([userId, year])
  @@index([userId])
  @@index([year])
  @@map("priority_mode_submissions")
}

// Normalized goal records for individual tracking
model PriorityGoal {
  id              String    @id @default(cuid())
  submissionId    String    @map("submission_id")
  priorityName    String    @map("priority_name")
  priorityOrder   Int       @map("priority_order")
  what            String    @db.Text
  byWhen          String    @map("by_when")
  successLooksLike String?  @map("success_looks_like") @db.Text
  status          String    @default("active") // active, completed, abandoned
  completedAt     DateTime? @map("completed_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  submission PriorityModeSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  milestones PriorityMilestoneRecord[]

  @@index([submissionId])
  @@map("priority_goals")
}

// Normalized milestone records for individual tracking
model PriorityMilestoneRecord {
  id          String    @id @default(cuid())
  goalId      String    @map("goal_id")
  period      String
  description String    @db.Text
  status      String    @default("pending") // pending, completed
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  goal PriorityGoal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@map("priority_milestones")
}

// Normalized habit records for individual tracking
model PriorityHabit {
  id           String    @id @default(cuid())
  submissionId String    @map("submission_id")
  habit        String
  type         String    // 'build' or 'eliminate'
  status       String    @default("active") // active, completed, abandoned
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  submission PriorityModeSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
  @@index([type])
  @@map("priority_habits")
}

// ============================================
// WISDOM FEEDBACK TABLE
// ============================================

model WisdomFeedback {
  id           String @id @default(cuid())
  submissionId String @unique @map("submission_id")

  // Structured feedback sections
  priorityAnalysis String? @map("priority_analysis") @db.Text
  goalFeedback     String? @map("goal_feedback") @db.Text
  suggestions      String? @db.Text
  identityInsights String? @map("identity_insights") @db.Text
  overallWisdom    String? @map("overall_wisdom") @db.Text

  // Status tracking
  status     String    @default("pending") // pending, in_progress, reviewed
  reviewedAt DateTime? @map("reviewed_at")

  // Email notification tracking
  notificationSentAt DateTime? @map("notification_sent_at")

  // Metadata
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relation
  submission PriorityModeSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([status])
  @@map("wisdom_feedback")
}

// ============================================
// TIME VIEWS TABLES
// ============================================

model TimeViewsEntry {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  year      Int
  week      Int // 1-52
  category  String // Code, Writing, Design, Business, Personal
  hours     Float    @default(0)
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user            AuthUser                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  accomplishments TimeViewsAccomplishment[]

  @@unique([userId, year, week, category])
  @@index([userId, year])
  @@map("time_views_entries")
}

model TimeViewsAccomplishment {
  id        String   @id @default(cuid())
  entryId   String   @map("entry_id")
  content   String
  completed Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  entry TimeViewsEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)

  @@map("time_views_accomplishments")
}
